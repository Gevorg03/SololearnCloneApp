<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_splash">

    <fragment
        android:id="@+id/nav_splash"
        android:name="com.example.sololearnclone.SplashFragment"
        android:label="Sololearn"
        tools:layout="@layout/fragment_splash" >

        <action
            android:id="@+id/action_SplashFragment_to_LoginFragment"
            app:destination="@id/nav_login"
            app:enterAnim="@anim/slide_in_right" />

        <action
            android:id="@+id/action_SplashFragment_to_HomeFragment"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/nav_registeration"
        android:name="com.example.sololearnclone.RegistrationFragment"
        android:label="Sololearn"
        tools:layout="@layout/fragment_registration">

        <action
            android:id="@+id/action_RegistrationFragment_to_LoginFragment"
            app:destination="@id/nav_login" />

    </fragment>

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.sololearnclone.LoginFragment"
        android:label="Sololearn"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_RegistrationFragment"
            app:destination="@id/nav_registeration" />

        <action
            android:id="@+id/action_LoginFragment_to_HomeFragment"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.sololearnclone.HomeFragment"
        android:label="Sololearn"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.sololearnclone.SignOutFragment"
        android:label="Sololearn"
        tools:layout="@layout/fragment_sign_out">

        <action
            android:id="@+id/action_GalleryFragment_to_LoginFragment"
            app:destination="@id/nav_login" />
    </fragment>

</navigation>